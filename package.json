{
  "name": "create-codepen",
  "version": "2.0.0",
  "description": "Create CodePen with API",
  "type": "module",
  "keywords": [
    "codepen"
  ],
  "homepage": "https://github.com/Mister-Hope/create-codepen",
  "bugs": {
    "url": "https://github.com/Mister-Hope/create-codepen/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mister-Hope/create-codepen.git",
    "directory": "packages/theme"
  },
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mister-hope.com"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "changelog": " commit-and-tag-version --skip.bump --skip.commit --skip.tag",
    "clean": "rimraf dist",
    "commit": "pnpm git-cz",
    "dev": "vite dev",
    "lint": "eslint . --fix && prettier --check --write .",
    "lint:check": "eslint . && prettier --check .",
    "prepare": "husky",
    "prepublishOnly": "pnpm build"
  },
  "nano-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,ts}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "commit-and-tag-version": "12.5.0",
    "commitizen": "4.3.1",
    "cz-git": "1.11.0",
    "eslint": "9.20.1",
    "eslint-config-mister-hope": "0.4.1",
    "husky": "9.1.7",
    "nano-staged": "0.8.0",
    "prettier": "3.5.0",
    "rimraf": "6.0.1",
    "rollup": "4.34.6",
    "rollup-plugin-dts": "6.1.1",
    "rollup-plugin-esbuild": "6.2.0",
    "typescript": "5.7.3",
    "vite": "6.1.0"
  },
  "packageManager": "pnpm@10.2.1",
  "engines": {
    "node": ">=18"
  }
}
