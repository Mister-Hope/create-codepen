{
  "name": "create-codepen",
  "version": "2.0.0",
  "description": "Create CodePen with API",
  "type": "module",
  "keywords": [
    "codepen"
  ],
  "homepage": "https://github.com/Mister-Hope/create-codepen",
  "bugs": {
    "url": "https://github.com/Mister-Hope/create-codepen/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mister-Hope/create-codepen.git",
    "directory": "packages/theme"
  },
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mister-hope.com"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "changelog": " conventional-changelog -p angular",
    "clean": "rimraf dist",
    "commit": "pnpm git-cz",
    "dev": "vite dev",
    "lint": "eslint . --fix && prettier --check --write .",
    "lint:check": "eslint . && prettier --check .",
    "prepare": "husky",
    "prepublishOnly": "pnpm build"
  },
  "nano-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,ts}": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "eslint": "9.31.0",
    "eslint-config-mister-hope": "0.9.6",
    "husky": "9.1.7",
    "nano-staged": "0.8.0",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "rollup": "4.45.0",
    "rollup-plugin-dts": "6.2.1",
    "rollup-plugin-esbuild": "6.2.1",
    "standard-changelog": "7.0.1",
    "typescript": "5.8.3",
    "vite": "7.0.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18"
  }
}
